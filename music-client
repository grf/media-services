#         "title": "Escape Artist",
#         "description": "Visit http://music.zoekeating.com",
#         "artwork_url": "file:///home/fischer/.cache/vlc/art/artistalbum/Zoe%20Keating/Into%20The%20Trees/art.jpg",
#         "date": "2010",
